    <section class="container mx-auto py-8">
      <h1 class="text-4xl font-bold text-center mt-4">Venues </h1>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mt-8">
        <script id="Venues" type="text/x-handlebars-template">
          {{#each venue}}
            <div class="bg-white rounded-lg shadow-lg"> <img src="{{imageUrl}}"
            alt="{{name}}
            Image" class="w-full h-48 object-cover rounded-t-lg" /> <div
            class="p-6"> <h2 class="text-xl font-bold mb-2">{{name}}</h2> <p
            class="text-gray-600 mb-4">{{description}}</p> <div class="flex
            justify-between items-center"> <span class="text-gray-900 font-bold
            text-xl">${{price}}</span> <a href="#_" class="relative px-5 py-3
            overflow-hidden font-medium text-white bg-pink-600 border-white
            rounded-lg shadow-inner group group-hover:bg-green-500 rounded-lg">
            <span class="absolute top-0 left-0 w-0 h-0 transition-all
            duration-200 border-t-2 border-green-500 custom-transition
            group-hover:w-full ease rounded-lg"></span> <span class="absolute
            bottom-0 right-0 w-0 h-0 transition-all duration-200 border-b-2
            border-green-500 custom-transition group-hover:w-full ease
            rounded-lg"></span> <span class="absolute top-0 left-0 w-full h-0
            transition-all duration-300 delay-200 bg-green-500 custom-transition
            group-hover:h-full ease rounded-lg"></span> <span class="absolute
            bottom-0 left-0 w-full h-0 transition-all duration-300 delay-200
            bg-green-500 custom-transition group-hover:h-full ease
            rounded-lg"></span> <span class="absolute inset-0 w-full h-full
            duration-300 delay-300 bg-green-600 opacity-0 custom-transition
            group-hover:opacity-100 rounded-lg"></span> <span class="relative
            transition-colors duration-300 delay-200 group-hover:text-white ease
            rounded-lg">Book now</span> </a> </div> </div> </div>
          {{/each}}
        </script>

        <!-- Add more venue cards as needed -->
      </div>
    </section>

    <div class="flex justify-center mt-8 py-8">
      <a
        href="#"
        class="bg-pink-600 text-white px-4 py-2 rounded-md hover:bg-pink-700 transition duration-300 ease-in-out mr-2"
      >1</a>
      <a
        href="#"
        class="bg-pink-600 text-white px-4 py-2 rounded-md hover:bg-pink-700 transition duration-300 ease-in-out ml-2"
      >2</a>
    </div>
